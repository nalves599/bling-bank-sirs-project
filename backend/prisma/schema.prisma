// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Secret {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())

  type String
  key String
  value String
}

type SignKey {
  createdAt   DateTime @default(now())
  deletedAt   DateTime?
  hash        String
  content     String
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


  email           String   @unique
  passwordHash    String
  name            String

  signKeys    SignKey[]
  accountsIDs String[] @default([])
}

type Signature {
  date        String // Encrypted
  content     String // Encrypted
  signKeyHash String
}

model Payment {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  account     Account @relation(fields: [accountID], references: [id])
  accountID   String
  hash        String // Encrypted
  value       String // Encrypted
  description String // Encrypted
  totp        String // Encrypted

  signatures  Signature[]
}

type Movement {
  id          String
  createdAt   DateTime @default(now())

  date        String // Encrypted
  value       String // Encrypted
  description String // Encrypted

  paymentID   String?
}

model Account {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name               String
  accountHolders     String[]
  balance            String // Encrypted
  currency           String // Encrypted
  movements          Movement[]
  payments           Payment[]
}


